<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:id="@+id/cardView"
    tools:ignore="RtlHardCoded"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp">
        <ImageView
            tools:ignore="ContentDescription"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_treasure"
            android:layout_marginLeft="12dp"
            android:id="@+id/treasure_icon" />

        <LinearLayout
            android:id="@+id/linear_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/treasure_icon"
            android:layout_toRightOf="@+id/treasure_icon"
            android:layout_toEndOf="@+id/treasure_icon"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:layout_toStartOf="@+id/iv_arrow"
            android:layout_marginLeft="14dp">
            <TextView
                android:id="@+id/tv_treasureTitle"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="标题"
                android:textColor="#317907"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:drawableLeft="@drawable/ic_love"
                android:textSize="12sp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"/>

            <Space
                android:layout_width="6dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="0.0km"
                android:drawableLeft="@drawable/ic_my_location"
                android:textSize="12sp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"/>
            <!--android:drawableLeft="@drawable/ic_treasure"-->
        </LinearLayout>


        <TextView
            android:id="@+id/tv_treasureLocation"
            android:layout_width="match_parent"
            android:text="广州天河区长兴路5号B幢208"
            android:textColor="#00aaaa"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_title"
            android:layout_alignLeft="@+id/linear_title"
            android:layout_alignStart="@+id/linear_title"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:layout_toStartOf="@+id/iv_arrow"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_arrow"
            android:layout_marginRight="10dp"
            android:tint="#c7b39d"
            tools:ignore="ContentDescription"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

