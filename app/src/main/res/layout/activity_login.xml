<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg"
    tools:context=".user.login.LoginActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:textAlignment="center"></android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/login_et_name"
        android:layout_width="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:hint="输入用户名"
        android:drawablePadding="10dp"
        android:layout_below="@id/login_toolbar"
        android:drawableLeft="@drawable/user_selector" />
    <EditText
        android:id="@+id/login_et_pwd"
        android:layout_width="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:hint="输入密码"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/password_selector"
        android:layout_below="@id/login_et_name" />
    <TextView
        android:id="@+id/login_tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:layout_below="@+id/login_et_pwd"
        android:background="@null"
        android:layout_alignRight="@+id/login_et_pwd"/>
    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/login_tv_forget"
        android:enabled="false"
        style="@style/Base.Widget.AppCompat.Button.Borderless"/>
</RelativeLayout>
